{% if settings.addthis != blank %}
<div class="addthis_inline_share_toolbox {% if alignment %}{{ alignment }}{% else %}text-center{% endif %}"></div>
{% elsif settings.share_facebook or settings.share_twitter or settings.share_pinterest %}
<div class="socials {% if alignment %}{{ alignment }}{% else %}text-center{% endif %}">
  <ul>
    {% if settings.share_facebook %}
    <li>
      <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" role="button" title="{{ 'general.social.facebook' | t | escape }}" aria-label="{{ 'general.social.facebook' | t | escape }}">
        {%- render 'icons.social', icon: 'facebook', icon_class: icon_class -%}
      </a>
    </li>
    {% endif %}
    {% if settings.share_twitter %}
    <li>
      <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" role="button" title="{{ 'general.social.twitter' | t | escape }}" aria-label="{{ 'general.social.twitter' | t | escape }}">
        {%- render 'icons.social', icon: 'twitter', icon_class: icon_class -%}
      </a>
    </li>
    {% endif %}

    {% if settings.share_pinterest %}
    <li>
      <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" role="button" title="{{ 'general.social.pinterest' | t | escape }}" aria-label="{{ 'general.social.pinterest' | t | escape }}">
        {%- render 'icons.social', icon: 'pinterest', icon_class: icon_class -%}
      </a>
    </li>
    {% endif %}
  </ul>
</div>
{% endif %}